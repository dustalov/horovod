<section id='yield'>
  <h2><%= t('devise.forget') %></h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <p><%= f.label :email %><br />
    <%= f.text_field :email %></p>

    <p><%= f.submit "Ok" %></p>
  <% end %>
</section>