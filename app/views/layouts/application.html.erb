<!DOCTYPE html>
<html>
<head>
  <title><%= t('horovod.title') %></title>
  <meta http-equiv='Content-Type' content='text/html;charset=UTF-8' />
  <!--[if IE]>
    <script>
      document.createElement('header');
      document.createElement('nav');
      document.createElement('section');
      document.createElement('article');
      document.createElement('aside');
      document.createElement('footer');
    </script>
  <![endif]-->
  <%= stylesheet_link_tag 'stylo' %>
  <%= stylesheet_link_tag 'minor' %>
  <%= javascript_include_tag 'swfobject' %>
  <%= rightjs_scripts :json, :tooltips, :lightbox, :rater %>
  <%= javascript_include_tag 'application' %>
  <%= auto_discovery_link_tag :atom, recent_url(:format => :atom),
    { :title => 'Свежие поздравления' } %>
  <%= auto_discovery_link_tag :atom, thebest_url(:format => :atom),
    { :title => 'Лучшие поздравления' } %>
  <%= csrf_meta_tag %>
</head>
<body>
  <header>
    <h1><%= link_to t('horovod.title'), root_url %></h1>

    <div id='login'>
      <% unless user_signed_in? %>
        <%= link_to t('devise.sessions.link'), new_user_session_path %> /
        <%= link_to t('devise.registrations.link'), new_user_registration_path %>
      <% else %>
        <%= link_to current_user, edit_user_registration_path %> /
        <%= link_to t('devise.session.destroy'), destroy_user_session_path %>
      <% end %>
    </div>

    <div id="motto">
      Поздравь свой
      <a href='http://ustu.ru/'
         target='_blank'
         rel='friend'>университет</a><i>!!</i>
    </div>

    <nav>
      <%= link_to t("activerecord.models.text"), text_posts_path,
        :id => 'nav-text', :'data-tooltip' => true,
        :title => 'Поздравить текстом.' %>
      <%= link_to t("activerecord.models.photo"), photo_posts_path,
        :id => 'nav-photo', :'data-tooltip' => true,
        :title => 'Поздравить текстом и приложить фотографию.' %>
      <%= link_to t("activerecord.models.audio"), audio_posts_path,
        :id => 'nav-audio', :'data-tooltip' => true,
        :title => 'Записать аудиошедевр и приложить текст.' %>
      <%= link_to t("activerecord.models.video"), video_posts_path,
        :id => 'nav-video', :'data-tooltip' => true,
        :title => 'Добавить блокбастер с <b>YouTube</b> или <b>Vimeo</b>.' %>
    </nav>
  </header>

<%= yield %>

<!-- Yandex.Metrika -->
